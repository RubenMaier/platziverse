{
  "name": "platziverse-web",
  "version": "1.0.0",
  "description": "Plataforma simple de IoT - Web Dashboard",
  "main": "server.js",
  "scripts": {
    "prestart": "npm run build",
    "prestart-dev": "npm run build",
    "build": "browserify -t babelify -t vueify client/app.js -o public/bundle.js",
    "start-win": "SET NODE_ENV=production && node server.js",
    "start-mac": "NODE_ENV=production node server.js",
    "start-dev-win": "SET DEBUG=platziverse:* && nodemon server.js",
    "start-dev-mac": "DEBUG=platziverse:* nodemon server.js",
    "lint": "standard",
    "lint-fix": "standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RubenMaier/platziverse.git"
  },
  "author": "Ruben Maier Enzler <ruben.maier@hotmail.com> (https://www.linkedin.com/in/ruben-maier-36ba1985)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RubenMaier/platziverse/issues"
  },
  "homepage": "https://github.com/RubenMaier/platziverse#readme",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "nodemon": "^1.18.9",
    "standard": "^12.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "vueify": "^9.4.1"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "chart.js": "^2.6.0",
    "debug": "^4.1.1",
    "express": "^4.16.4",
    "express-asyncify": "^1.0.0",
    "moment": "^2.23.0",
    "platziverse-agent": "file:../platziverse-agent",
    "platziverse-utils": "file:../platziverse-utils",
    "random-material-color": "^1.0.3",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "vue": "^2.4.2",
    "vue-chartjs": "^2.8.1"
  }
}
